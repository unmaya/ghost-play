<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>
	<meta name="description" content="{{meta_description}}" />

	<meta name="HandheldFriendly" content="True" />
	<meta name="MobileOptimized" content="320" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<meta name="twitter:card" content="summary">
	<meta name="twitter:title" content="{{meta_title}}">
	<meta name="twitter:description" content="{{meta_description}}">
	{{! Twitter username for the site owner and content author }}
	<meta name="twitter:site" content="@yourblogtwitter">
	<meta name="twitter:creator" content="@yourtwitter">

	<meta property="og:type" content="article">
	<meta property="og:title" content="{{meta_title}}">
	<meta property="og:description" content="{{meta_description}}">

	<script src="//use.edgefonts.net/source-sans-pro;pt-sans-narrow;lato:n1,n3,n9,i9.js"></script>

	<link rel="stylesheet" type="text/css" href="/assets/css/site.css" />

	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<link href="/favicon.ico" rel="shortcut icon" type="image/x-icon">
	<link href="/apple-touch-icon-precomposed.png" rel="apple-touch-icon">

	{{ghost_head}}
</head>

<body class="{{body_class}}">

<header id="site-head"{{#if @blog.cover}} class="cover"{{/if}}>
	<div class="inner">
		{{#if @blog.logo}}
			<a class="js-ajax-link js-show-index" id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
			<h1 class="blog-title"><a class="js-ajax-link js-show-index" id="blog-logo-title" href="{{@blog.url}}">{{@blog.title}}</a></h1>
		{{else}}
			<h1 class="blog-title"><a class="js-ajax-link js-show-index" id="blog-title" href="{{@blog.url}}">{{@blog.title}}</a></h1>
		{{/if}}
	</div>
	{{#if @blog.cover}}
		<div id="site-cover" style="background-image: url({{@blog.cover}})"></div>
	{{else}}
		<div id="site-cover" class="girder-ghost-cover"></div>
	{{/if}}
</header>

<section id="wrapper" class="container">
	<div id="ajax-container">
		{{{body}}}
	</div>
</section>

<footer class="site-footer">
	<a class="thetheme" href="#"><small>Ghost Theme</small></a>
	<div class="inner">
		<section class="copyright">All content by <a href="/">{{@blog.title}}</a> &copy; 2013 &bull; All rights reserved.</section>
		<section class="poweredby"><small>Published with <a class="icon-ghost" href="http://ghost.org">Ghost</a></small></section>
	</div>
</footer>

{{! Ghost outputs important scripts and data with this tag }}
{{ghost_foot}}

<!-- build:js /assets/js/site.min.js -->
<script type="text/javascript" src="/assets/js/libs/jquery.history.js"></script>
<script type="text/javascript" src="/assets/js/libs/nprogress.js"></script>
<script type="text/javascript" src="/assets/js/libs/prism.js"></script>
<script type="text/javascript" src="/assets/js/main.js"></script>
<!-- endbuild -->

<script type="text/javascript">
{{> analytics_config}}

(function(g,h,o,s,t,z){g.GoogleAnalyticsObject=s;g[s]||(g[s]=
function(){(g[s].q=g[s].q||[]).push(arguments)});g[s].s=+new Date;
t=h.createElement(o);z=h.getElementsByTagName(o)[0];
t.src='//www.google-analytics.com/analytics.js';
z.parentNode.insertBefore(t,z)}(window,document,'script','ga'));
ga('create',ga_ua);ga('send','pageview');
</script>

</body>
</html>